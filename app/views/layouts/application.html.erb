<!DOCTYPE html>
<html>
<head>
  <title>MansionExpress</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">




<!-- NAVBAR -->
</head>
<body>
	<% if current_user %>
	  <div id="header" class="navbar navbar-top"> <div class="page-container-full mansion-header clearfix">
			<%= link_to 'MansionExpress', root_path %>
	    <ul class="nav pull-right help-menu " style="margin-left:0;">
	      <li class="list-your-space ">
	        <button type="button" class="btn btn-default btn-sm"><a id="list-your-space" class="btn btn-special" href="/listmansion">List Your Space</a></button>
	      </li>
	    </ul>
	    <ul class="nav pull-right logged-out">
	       <li><%= link_to 'your mansions', user_path(current_user) %> </li>
	       <li><%= link_to 'account settings', edit_user_registration_path %></li>
	       <li><%= link_to 'sign out', destroy_user_session_path, method: :delete %> </li>
	    </ul>
	   </div>
	 </div>

	<% else %>

	<div id="header" class="navbar navbar-top">
	  <div class="page-container-full mansion-header clearfix">
			<%= link_to 'MansionExpress', root_path %>
	  
	    <ul class="nav pull-right logged-out">
	      <li><%= link_to 'Log In', new_user_session_path %>
	      </li>
	      <li><%= link_to 'Sign Up', new_user_registration_path, class: 'link-reset' %></li>
	     <li><button type="button" class="btn-my btn btn-default btn-lg"><%= link_to 'List Your Mansion', root_path, class: 'link-reset' %></button></li>
	      </li>
	    </ul>
	  </div>
	</div>

	<% end %>

	<%#= flash.notice if flash.notice %>
	<%#= flash.alert if flash.alert %>
	
	<%= yield %>

</body>
</html>

<div id="usershowheader">
	<% if @user.name %>
	<h2><%=@user.name%></h2>
	<%end%>
<%= @user.email %></br>

<div id="useravatar"><%= image_tag @user.photo.url(:thumb) %></div>

</div>
</br>

<div id="aboutme">
	<h3> About Me </h3>
	<%if @user.personality_traits %>
	<%@user.personality_traits.each do |trait| %>
		<%=trait.category%>: <%= trait.name%></br>
	<%end%>
	<%end%>
</div>
<!--Display Compatabilities-->
<%if current_user && (@user != current_user) %>
<p> You have <%=user_to_user_compatibility_points(current_user, @user)%> compatibility points. </p>
<p>You are <%=user_to_user_compatibility_percentage(current_user, @user)%>% compatible.</p>

<%end%>

<% @user.mansions.each do |mansion| %>
<div class="col-md-3" id="mansiondisplay">
	<div class="jumbotron">
	<a href="/mansions/<%=mansion.id %>/">	<img src="<%= mansion.photo_url %>" height="300px" width="100%"/></a></br>
	<a href="/mansions/<%= mansion.id %>"><%=mansion.name%></a></br>
	<%=mansion.city%>, <%=mansion.country%>
</div>
</div>
<% end %>